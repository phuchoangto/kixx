generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  email    String? @unique

  roles   UserRoles[]
  student Student?
}

model UserRoles {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])

  role Role @default(STUDENT)
}

model Student {
  id Int @id 
  firstName String?
  lastName  String?

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  facultyId Int?
  faculty Faculty? @relation(fields: [facultyId], references: [id])

  checkIns EventCheckIn[]
}

model Faculty {
  id   Int    @id @default(autoincrement())
  name String @unique

  students Student[]
  events   Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  description String?  @db.Text
  start       DateTime
  end         DateTime
  imageUrl    String?

  facultyId Int?
  faculty   Faculty? @relation(fields: [facultyId], references: [id])

  checkIns EventCheckIn[]
}

model EventCheckIn {
  id        Int      @id @default(autoincrement())
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id])
  eventId   Int
  event     Event    @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())
}
